<ContentDialog
    x:Class="CrossInputShare.UI.Controls.CreateSessionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create New Session"
    PrimaryButtonText="Create"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="16">
        <TextBlock 
            Text="Create a new sharing session. Other devices can join using the session code."
            TextWrapping="Wrap"
            Foreground="{ThemeResource TextFillColorSecondary}" />
        
        <ComboBox 
            Header="Role"
            ItemsSource="{Binding AvailableRoles}"
            SelectedItem="{Binding SelectedRole, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Spacing="4">
                        <TextBlock Text="{Binding GetDisplayName}" FontWeight="SemiBold" />
                        <TextBlock 
                            Text="{Binding GetDescription}" 
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondary}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <StackPanel>
            <TextBlock 
                Text="Session Features"
                FontWeight="SemiBold"
                Margin="0,0,0,8" />
            
            <ToggleSwitch 
                Header="Share Keyboard"
                IsOn="{Binding IsKeyboardShared, Mode=TwoWay}"
                OffContent="Disabled"
                OnContent="Enabled" />
            
            <ToggleSwitch 
                Header="Share Mouse"
                IsOn="{Binding IsMouseShared, Mode=TwoWay}"
                OffContent="Disabled"
                OnContent="Enabled" />
            
            <ToggleSwitch 
                Header="Share Clipboard"
                IsOn="{Binding IsClipboardShared, Mode=TwoWay}"
                OffContent="Disabled"
                OnContent="Enabled" />
            
            <ToggleSwitch 
                Header="Share Screen (Optional)"
                IsOn="{Binding IsScreenShared, Mode=TwoWay}"
                OffContent="Disabled"
                OnContent="Enabled" />
        </StackPanel>
        
        <Border 
            Background="{ThemeResource CardBackgroundFillColorDefault}"
            BorderBrush="{ThemeResource CardStrokeColorDefault}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="12">
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Security Information"
                    FontWeight="SemiBold" />
                <TextBlock 
                    Text="• All connections are encrypted end-to-end"
                    FontSize="12" />
                <TextBlock 
                    Text="• Device fingerprints are verified before sensitive features are enabled"
                    FontSize="12" />
                <TextBlock 
                    Text="• Screen sharing requires manual verification"
                    FontSize="12"
                    Foreground="#FF9800" />
            </StackPanel>
        </Border>
    </StackPanel>
</ContentDialog>